@using static FinalProject.Models.CGlobalParameters;

<!DOCTYPE html>
<html lang="zh-tw">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewData["Title"] - TripLook 後台管理系統</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Server/css/site.css" asp-append-version="true" />
    <link href="~/Server/css/simple-datatables-style.css" rel="stylesheet" />
    <link href="~/Server/css/styles.css" rel="stylesheet" asp-append-version="true" />
</head>

<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <!-- Navbar Brand-->

        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!">
            <i class="fas fa-bars"></i>
        </button>
        <a class="navbar-brand ps-3" asp-area="Server" asp-controller="Home" asp-action="Index">TripLook 管理系統</a>
        <!-- Sidebar Toggle-->
        <!-- Navbar Search-->
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <a class="navbar-brand ps-3" asp-area="Server" asp-controller="Home" asp-action="Logout" asp-route-id="1">回到 TripLook 網站</a>
        </form>
        <!-- Navbar-->
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown"
                   aria-expanded="false"><i class="fas fa-user fa-fw"></i></a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a hidden class="dropdown-item" href="#!">使用者資料</a></li>
                    <li>
                        <hr class="dropdown-divider" />
                    </li>
                    <li><a class="dropdown-item" asp-area="Server" asp-controller="Home" asp-action="Logout">登出</a></li>
                </ul>
            </li>
        </ul>
    </nav>
    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        @{
                            if (this.ViewContext.HttpContext.Session.Keys.Contains(CDictionary.SK_LOGINED_ADMIN))
                            {
                                <div class="sb-sidenav-menu-heading">後台管理</div>
                                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse"
                               data-bs-target="#collapseLayouts1" aria-expanded="false" aria-controls="collapseLayouts1">
                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    會員/供應商資料管理
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="collapseLayouts1" aria-labelledby="headingOne"
                                 data-bs-parent="#sidenavAccordion">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" asp-area="Server" asp-controller="Customer" asp-action="List">會員資料管理</a>
                                        <a class="nav-link" asp-area="Server" asp-controller="Provider" asp-action="List">供應商資料管理</a>
                                    </nav>
                                </div>
                                <a class="nav-link collapsed" asp-area="" asp-controller="Product" asp-action="List" data-bs-toggle="collapse"
                           data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    商品管理
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne"
                                 data-bs-parent="#sidenavAccordion">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" asp-area="Server" asp-controller="Product" asp-action="Create">新增商品</a>
                                        <a class="nav-link" asp-area="Server" asp-controller="Product" asp-action="List">商品列表</a>
                                    </nav>
                                </div>
                                <a class="nav-link collapsed" asp-area="" asp-controller="Order" asp-action="List" data-bs-toggle="collapse"
                           data-bs-target="#collapseLayouts2" aria-expanded="false" aria-controls="collapseLayouts2">
                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    訂單管理
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="collapseLayouts2" aria-labelledby="headingOne"
                                 data-bs-parent="#sidenavAccordion">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" asp-area="Server" asp-controller="CustomerOrderSheet" asp-action="ListUnchecked">未確認訂單</a>
                                        <a class="nav-link" asp-area="Server" asp-controller="CustomerOrderSheet" asp-action="ListChecked">已確認訂單</a>
                                        <a class="nav-link" asp-area="" asp-controller="CustomerOrderSheet" asp-action="ListCanceled">已取消訂單</a>
                                    </nav>
                                </div>
                                <a class="nav-link" asp-area="Server" asp-controller="ManagerReview" asp-action="List">
                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    評論管理
                                </a>
                                <a class="nav-link" asp-area="Server" asp-controller="ManagerReport" asp-action="List">
                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    檢舉管理
                                </a>
                                <a class="nav-link" asp-area="Server" asp-controller="Coupon" asp-action="List">
                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    優惠券管理
                                </a>
                            }
                            else if (this.ViewContext.HttpContext.Session.Keys.Contains(CDictionary.SK_LOGINED_PROVIDER))
                            {
                                <div class="sb-sidenav-menu-heading">後台管理</div>
                                <a class="nav-link" asp-area="Server" asp-controller="Provider" asp-action="Details" asp-route-id="@FetchCustomerId(this.ViewContext.HttpContext)">
                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    使用者資料
                                </a>
                                <a class="nav-link collapsed" asp-area="Server" asp-controller="Product" asp-action="List" data-bs-toggle="collapse"
                           data-bs-target="#collapseLayouts" aria-expanded="false" aria-controls="collapseLayouts">
                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    商品管理
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="collapseLayouts" aria-labelledby="headingOne"
                                 data-bs-parent="#sidenavAccordion">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" asp-area="Server" asp-controller="Product" asp-action="Create">新增商品</a>
                                        <a class="nav-link" asp-area="Server" asp-controller="Product" asp-action="List">商品列表</a>
                                    </nav>
                                </div>
                                <a class="nav-link collapsed" asp-area="Server" asp-controller="Order" asp-action="List" data-bs-toggle="collapse"
                           data-bs-target="#collapseLayouts2" aria-expanded="false" aria-controls="collapseLayouts2">
                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    訂單管理
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="collapseLayouts2" aria-labelledby="headingOne"
                                 data-bs-parent="#sidenavAccordion">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" asp-area="Server" asp-controller="CustomerOrderSheet" asp-action="ListUnchecked">未確認訂單</a>
                                        <a class="nav-link" asp-area="Server" asp-controller="CustomerOrderSheet" asp-action="ListChecked">已確認訂單</a>
                                        <a class="nav-link" asp-area="Server" asp-controller="CustomerOrderSheet" asp-action="ListCanceled">已取消訂單</a>
                                    </nav>
                                </div>
                                <a class="nav-link" asp-area="Server" asp-controller="ManagerReview" asp-action="List">
                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    評論管理
                                </a>
                                <a class="nav-link" asp-area="Server" asp-controller="ManagerReport" asp-action="List">
                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    檢舉管理
                                </a>
                                <a class="nav-link" asp-area="Server" asp-controller="Coupon" asp-action="List">
                                    <div class="sb-nav-link-icon"><i class="fas fa-table"></i></div>
                                    優惠券管理
                                </a>
                            }
                            else
                            {
                                <div class="sb-sidenav-menu-heading">請先登入系統</div>
                            }
                        }
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    @{
                        string title = "未登入";
                        string name = "";
                        if (IsAdmin(this.ViewContext.HttpContext))
                        {
                            title = "管理員：";
                            name = FetchManagerName(this.ViewContext.HttpContext);
                        }
                        else if (IsProvider(this.ViewContext.HttpContext))
                        {
                            title = "供應商：";
                            name = FetchProviderName(this.ViewContext.HttpContext);
                        }
                        <div class="small">
                            @title
                            <br />
                            @name
                        </div>
                    }

                </div>
            </nav>
        </div>
        <div id="layoutSidenav_content">
            <main>
                @RenderBody()
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-center small">
                        <div class="text-muted">Copyright &copy; TripLook @DateTime.Now.Year</div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/Server/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>
    <script src="~/Server/js/scripts.js"></script>
    <script src="~/Server/js/Chart.min.js" crossorigin="anonymous"></script>
    <script src="~/Server/assets/demo/chart-area-demo.js"></script>
    <script src="~/Server/assets/demo/chart-bar-demo.js"></script>
    <script src="~/Server/js/table.js"></script>
    <script src="~/Server/js/datatables-simple-demo.js"></script>
    <script src="~/Server/js/site.js" asp-append-version="true"></script>
    <script src="~/Server/js/fas-all.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
