@model IEnumerable<FinalProject.Areas.Server.ViewModels.CCustomerOrderSheetViewModel>

@{
    ViewData["Title"] = "List_uncheck";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">未確認訂單</h1>
</div>

<div class="card mb-4">
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>                    
                    <th>
                        @Html.DisplayNameFor(model => model.OrderLastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.OrderFirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CouponCode)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreationDate)
                    </th>
                    <th style="display:none">
                        @Html.DisplayNameFor(model => model.CheckedDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>                        
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderLastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderFirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CouponCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreationDate)
                        </td>
                        <td style="display:none">
                            @Html.DisplayFor(modelItem => item.CheckedDate)
                        </td>
                        <td>
                            @Html.ActionLink("詳細", "DetailsUnchecked", new { id = item.CustomerOrderSheetId }, new { @class = "btn btn-secondary" })
                            @Html.ActionLink("確認", "Confirm", new { id = item.CustomerOrderSheetId }, new { @class = "btn btn-success" })
                            @Html.ActionLink("取消訂單", "UncheckOrderCancel", new { id = item.CustomerOrderSheetId }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
