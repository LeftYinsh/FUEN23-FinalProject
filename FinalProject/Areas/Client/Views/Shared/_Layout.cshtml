		<script>
			var vueApp = {
				data() {
					return {
						fId: null, //新增要用
						fFirstName: null,  //繫節
						fLastName: null,
						fTel: null,
						fMobile: null,
						fEmail: null,
						fPassword: null,
						fGender: null,
						fNewbirthdate: null,

						location: null,

						email: null,
						password: null,
					};
				},
				methods: {
					showModal: function () {
						//alert("showModal")
						$("#insertModal").modal("show");
					},
					showloginModal: function () {
						$("#loginModal").modal("show");
					},
					signin: async function () {
						let _this = this;
						var p = {
							txtAccount: _this.email,
							txtPassword: _this.password,
						}
						await axios.post(`/api/Customer`, p).then(response => {
							alert(response.data);
							if (response.data == "登入成功！") {
								window.location = "/";
								};														
						}).catch(error => {
							alert("登入失敗，請檢查帳號是否正確");
						});
						_this.email = null;
						_this.password = null;
					},
					insert: function () {
						let _this = this;
						var p = {
							FId: 0,
							FFirstName: _this.fFirstName,
							FLastName: _this.fLastName,
							FGender: _this.fGender,
							FTel: _this.fTel,
							FMobile: _this.fMobile,
							FEmail: _this.fEmail,
							FPassword: _this.fPassword,
							FNewBirthDate: new Date(_this.fNewbirthdate),
							FBirthDate: "",
							FPoint: 0,
						};
						axios.post(`/api/Customer/new`, p).then(response => {
							alert(response.data);
							window.location = "/";
						}).catch(err =>{
							alert("請輸入正確資料");
						});
					},
					demo: function (){
						//alert("ll")
						let _this = this;
						_this.fFirstName= "小王";
						_this.fLastName= "陳";
						_this.fTel=  "062874458";
						_this.fMobile=  "0936554145";
						_this.fEmail= "fsad11@gmail.com";
						_this.fPassword= "SAdd20";
						_this.fGender= "0";
					},
					checkTel: function (){
						//alert("ss");
						let _this = this;
						let telVal = _this.fTel;
						let telLen = _this.fTel.length;
						let sp = document.getElementById("istel");

						let ch, ck, flag1 = false, flag2 = false;
						if (telLen <= 0) {
							sp.innerText = "不可為空白";
							sp.style.color = "red";
							$("#ck").prop("disabled", true);
						}
						else if (telLen >= 9 && telLen <= 10) {
							for (let i = 0; i < telLen; i++) {
								ch = telVal.charAt(i);
								ck = telVal.substr(0, 1);
								if (ch >= "0" && ch <= "9")
									flag1 = true;
								if (ck == "0")
									flag2 = true;
								if (flag1 && flag2) break;
							}
							if (flag1 && flag2) {
								sp.innerText = "";
								$("#ck").prop("disabled", false);
							}
						}
						else {
							sp.innerText = "需要0開頭的九或十碼";
							sp.style.color = "red";
							$("#ck").prop("disabled", true);
						}

					},
				},
				mounted: function () {
					let _this = this;
					_this.location = window.location.pathname;
				}
			};
			var app = Vue.createApp(vueApp).mount("#loginApp");
		</script>

